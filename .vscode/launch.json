        {
            "name": "pytest: Run All Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "pytest: Run All Tests with Coverage",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "--cov=tools/src",
                "--cov-report=term-missing",
                "--cov-report=html"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "pytest: Run Current Test File",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "pytest: Debug Current Test",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}::${selectedText}",
                "-v",
                "-s"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "pytest: Run Unit Tests Only",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/unit/",
                "-v",
                "-m",
                "unit"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
